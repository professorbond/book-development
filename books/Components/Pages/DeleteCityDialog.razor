@using MudBlazor
@using MyBlazorApp.Data
@using Microsoft.EntityFrameworkCore
@namespace MyBlazorApp.Components.Pages
<MudDialog>
    <TitleContent>
        Удалить запись
    </TitleContent> 

    <DialogContent>
        <MudTextField @bind-Value="IdName" Label="ID" Variant="Variant.Outlined" />
    </DialogContent>

    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Error" OnClick="Submit">Удалить</MudButton>
    </DialogActions>
</MudDialog>
